{
  "actions": [
    {
      "type": "copy",
      "desc": "File copy",
      "globs": [
        "**.mod",
        "**.wav"
      ]
    },{
      "type": "external",
      "desc": "External action",
      "command": [
          "some_program", 
          "-i", "{input_filepath}",
          "-o", "{output_filepath}"
      ],
      "outputs": [
        "{relative_folder}/{file_basename}.json",
        "{relative_folder}/{file_basename}.png"
      ],
      "globs": [
        "**.somefile"
      ]
    }
  ]
}